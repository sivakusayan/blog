{% from "themePicker.njk" import themePicker %}

<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">

    <!-- Serve CSS inline on prod for performance -->
    {%- css %}{% include "css/reset.css" %}{% endcss %}
    {%- css %}{% include "css/index.css" %}{% endcss %}
    {%- css %}{% include "css/link.css" %}{% endcss %}
    {%- css %}{% include "css/header.css" %}{% endcss %}
    {%- css %}{% include "css/footer.css" %}{% endcss %}
    {%- css %}{% include "css/scrollbar.css" %}{% endcss %}
    {%- css %}{% include "css/themePicker.css" %}{% endcss %}
    {%- if eleventy.env.runMode === "serve" %}
      <link rel="stylesheet" href="{% getBundleFileUrl "css" %}">
    {%- else  %}
      <style>
        {% getBundle "css" %}
      </style>
    {%- endif %}

    <!-- Needed to prevent FOUS -->
    <script>
      if (localStorage.theme) 
        document
          .documentElement
          .setAttribute("data-theme", localStorage.theme);
    </script>
  </head>
  <body>
    <header>
      <div class="header-wrapper">
        {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
        <ul class="nav">
          {%- for entry in collections.all | eleventyNavigation %}
            <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
              <a href="{{ entry.url | url }}">{{ entry.title }}</a>
            </li>
          {%- endfor %}
        </ul>

        {{ themePicker() }}
      </div>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
    <footer>
      <div class="footer-wrapper">
        <span>Powered by <a href="https://www.11ty.dev">Eleventy</a>.</span>
      </div>
    </footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>