---
script: index.js
---
<!doctype html>
<html lang="{{ metadata.language }}">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/reset.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-base16-monokai.dark.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/prism-diff.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
    <script>
    if (localStorage.theme) document.documentElement.setAttribute("data-theme", localStorage.theme);
    </script>
  </head>
  <body>
    <header>
      <h1 class="home">
        <a href="{{ '/' | url }}">{{ metadata.title }}</a>
      </h1>

      {#- Read more about `eleventy-navigation` at https://www.11ty.dev/docs/plugins/navigation/ #}
      <ul class="nav">
        {%- for entry in collections.all | eleventyNavigation %}
          <li class="nav-item{% if entry.url == page.url %} nav-item-active{% endif %}">
            <a href="{{ entry.url | url }}">{{ entry.title }}</a>
          </li>
        {%- endfor %}
      </ul>

      <fieldset class="theme-picker" aria-label="Theme">
        <div class="radio-container">
          <input class="visually-hidden" type="radio" name="theme" id="light-theme-radio">
          <label for="light-theme-radio">{% lucide "sun", { "aria-label": "Light" } %}</label>
        </div>
        <div class="radio-container">
          <input class="visually-hidden" type="radio" name="theme" id="dark-theme-radio">
          <label for="dark-theme-radio">{% lucide "moon", { "aria-label": "Dark" }%}</label>
        </div>
        <div class="radio-container">
          <input class="visually-hidden" type="radio" name="theme" id="system-theme-radio">
          <label for="system-theme-radio">{% lucide "monitor", { "aria-label": "System" } %}</label>
        </div>
      </fieldset>
      <script>
        if (localStorage.theme) {
            switch (localStorage.theme) {
    case "LIGHT":
      radio = document.getElementById("light-theme-radio");
      break;
    case "DARK":
      radio = document.getElementById("dark-theme-radio");
      break;
    case "SYSTEM":
      radio = document.getElementById("system-theme-radio");
      break;
    default:
      break;
  }
  radio.checked = true;
        }
      </script>
    </header>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>
      {{ content | safe }}
    </main>
    <script src="/scripts/lightDarkTheme.js" defer></script>
    <footer></footer>

    <!-- Current page: {{ page.url | url }} -->
  </body>
</html>