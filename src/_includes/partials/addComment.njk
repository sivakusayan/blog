{% macro addComment(parent, fileSlug) %}
<form class="comment-form" method="post" action="http://localhost:8080/v2/entry/sivakusayan/blog/main/comments">
   <p>All markdown, except for markdown headings, are accepted.</p>

     <label for="name">Name</label>
     <br>
     <input required="true" id="name" type="text" name="fields[name]" placeholder="John Doe">
 
     <label for="message">Comment</label>
     <br>
     <textarea required="true" id="message" name="fields[message]" placeholder="Here's the thing..."></textarea>
 
   
   {%- if parent %} <input type="hidden" name="fields[parent]" value="{{ parent }}"> {%- endif %}
   <input type="hidden" name="fields[post]" value="{{ fileSlug }}">
   <input type="hidden" name="options[redirect]" value="http://localhost:8081/comment-submitted">
   <input type="hidden" name="options[redirectError]" value="http://localhost:8081/comment-error">
 
     <button type="submit">Submit</button>
 </form>
{% endmacro %}
