<ul class="postlist" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
  {% for post in postslist | reverse %}
    <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %}">
      <a href="{{ post.url | url }}" class="postlist-link">
        {% if post.data.title %}{{ post.data.title }}
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
      </a>
      <div>
        <time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | shortReadableDate }}</time>
      </div>
    </li>
  {% endfor %}
</ul>