<div>
  <h2 id="chromium-contributions">Chromium contributions</h2>
  {% if chromiumChanges.inProgress | length %}
    <h3>In Progress</h3>
    <ul>
      {% for change in chromiumChanges.inProgress %}
        <li>{{ gerritLink(change) }}</li>
      {% endfor %}
    </ul>
    <!-- We only want to show separate headings if there is some change in progress. 
         Otherwise the headings add needless noise.-->
    <h3>Merged</h3>
  {% endif %}
  <ul>
    {% for change in chromiumChanges.merged %}
      <li>{{ gerritLink(change) }}</li>
    {% endfor %}
  </ul>
</div>